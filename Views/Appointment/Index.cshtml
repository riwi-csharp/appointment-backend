@model IEnumerable<appointment_backend.Models.Appointment>

@{
    ViewData["Title"] = "Index";
}


<div class="row">
    
    <div class="d-flex justify-content-end">
        <a class="btn btn-outline-success btn-sm" asp-action="Create" asp-controller="Appointment">Agregar Nueva Cita</a>
    </div>
    
    <h2>Listado de citas</h2>
   
    <div class="col-md-12">
        @* List of appointments *@
        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Paciente</th>
                <th scope="col">Doctor</th>
                <th scope="col">Fecha Cita</th>
                <th scope="col">Acciones</th>
            </tr>
            </thead>
            
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Id</th>
                    <td>@item.Patient.Name</td>
                    <td>@item.Doctor.Name</td>
                    <td>@item.Date</td>
                    <td>
                        <a class="btn btn-outline-primary btn-sm" asp-action="Details" asp-controller="Appointment" asp-route-id="@item.Id">Detalles</a>
                        <a class="btn btn-outline-secondary btn-sm" asp-action="Edit" asp-controller="Appointment" asp-route-id="@item.Id">Editar</a>
                        <form asp-action="Delete" asp-route-id="@item.Id" asp-controller="Appointment" method="post" style="display: inline">
                            @Html.AntiForgeryToken()
                        </form>
                        <form asp-action="Delete" asp-route-id="@item.Id" asp-controller="Appointment" method="post"
                              style="display: inline">
                            @Html.AntiForgeryToken()

                            <button type="submit"
                                    class="btn btn-outline-danger btn-sm"
                                    onclick="return confirm('Â¿Do you want to delete this medic appointment?');">
                                Borrar
                            </button>
                        </form>
                        <a class="btn btn-outline-success btn-sm" asp-action="SendEmail" asp-route-id="@item.PatientId" asp-controller="Appointment">Send Email</a>
                    </td>
                </tr>
                
            }
            </tbody>
        </table>
        
    </div>
    
    
</div>