@model appointment_backend.Models.Appointment

<div class="container mt-4">
    <h2>Edit Appointment</h2>
    <hr />

    <form asp-action="Edit" method="post">
        <input type="hidden" name="Id" value="@Model.Id" />

        <!-- PATIENT -->
        <div class="mt-3 d-flex flex-column">
            <label for="PatientId">Patient</label>
            <select id="PatientId" class="form-control" name="PatientId" required>
                <option value="">-- Select a patient --</option>
                @foreach (var patient in ViewData["Patients"] as List<appointment_backend.Models.Patient>)
                {
                    if (patient.Id == Model.PatientId)
                    {
                        <option value="@patient.Id" selected>@patient.Name</option>
                    }
                    else
                    {
                        <option value="@patient.Id">@patient.Name</option>
                    }
                }
            </select>
        </div>

        <!-- DOCTOR -->
        <div class="mt-3 d-flex flex-column">
            <label for="DoctorId">Doctor</label>
            <select id="DoctorId" class="form-control" name="DoctorId" required>
                <option value="">-- Select a doctor --</option>
                @foreach (var doctor in ViewData["Doctors"] as List<appointment_backend.Models.Doctor>)
                {
                    if (doctor.Id == Model.DoctorId)
                    {
                        <option value="@doctor.Id" selected>@doctor.Name</option>
                    }
                    else
                    {
                        <option value="@doctor.Id">@doctor.Name</option>
                    }
                }
            </select>
        </div>

        <!-- DATE -->
        <div class="mt-3 d-flex flex-column">
            <label for="Date">Date</label>
            <input id="Date" type="datetime-local" class="form-control" name="Date"
                   value="@Model.Date?.ToString("yyyy-MM-ddTHH:mm")" required />
        </div>

        <!-- CONSULTING ROOM -->
        <div class="mt-3 d-flex flex-column">
            <label for="ConsultingRoom">Consulting Room</label>
            <input id="ConsultingRoom" class="form-control" name="ConsultingRoom" value="@Model.ConsultingRoom" />
        </div>

        <!-- STATUS -->
        <div class="mt-3 d-flex flex-column">
            <label for="StatusId">Status</label>
            <select id="StatusId" class="form-control" name="StatusId" required>
                <option value="">-- Select a status --</option>
                @foreach (var status in ViewData["Statuses"] as List<appointment_backend.Models.AppointmentStatus>)
                {
                    if (status.Id == Model.StatusId)
                    {
                        <option value="@status.Id" selected>@status.Status</option>
                    }
                    else
                    {
                        <option value="@status.Id">@status.Status</option>
                    }
                }
            </select>
        </div>

        <!-- NOTES -->
        <div class="mt-3 d-flex flex-column">
            <label for="Notes">Notes</label>
            <textarea id="Notes" class="form-control" name="Notes" rows="3">@Model.Notes</textarea>
        </div>

        <!-- SUBMIT -->
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
