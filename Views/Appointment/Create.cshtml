@model appointment_backend.Models.Appointment

<div class="container mt-4">
    <h2>Create Appointment</h2>
    <hr />

    <form asp-action="Create" method="post">

        <!-- PATIENT -->
        <div class="mt-3 d-flex flex-column">
            <label for="PatientId">Patient</label>
            <select id="PatientId" name="PatientId" class="form-control" required>
                <option value="">-- Select a patient --</option>
                @foreach (var patient in ViewData["Patients"] as List<appointment_backend.Models.Patient>)
                {
                    <option value="@patient.Id">@patient.Name</option>
                }
            </select>
        </div>

        
        <!-- DOCTOR -->
        <div class="mt-3 d-flex flex-column">
            <label for="DoctorId">Doctor</label>
            <select id="DoctorId" name="DoctorId" class="form-control" required>
                <option value="">-- Select a doctor --</option>
                @foreach (var doctor in ViewData["Doctors"] as List<appointment_backend.Models.Doctor>)
                {
                    <option value="@doctor.Id">@doctor.Name</option>
                }
            </select>
        </div>

        <!-- DATE -->
        <div class="mt-3 d-flex flex-column">
            <label for="Date">Date</label>
            <input id="Date" name="Date" type="datetime-local" class="form-control" required />
        </div>

        <!-- CONSULTING ROOM -->
        <div class="mt-3 d-flex flex-column">
            <label for="ConsultingRoom">Consulting Room</label>
            <input id="ConsultingRoom" name="ConsultingRoom" class="form-control" />
        </div>

        <!-- STATUS -->
        <div class="mt-3 d-flex flex-column">
            <label for="StatusId">Status</label>
            <select id="StatusId" name="StatusId" class="form-control" required>
                <option value="">-- Select a status --</option>
                @foreach (var status in ViewData["Statuses"] as List<appointment_backend.Models.AppointmentStatus>)
                {
                    <option value="@status.Id">@status.Status</option>
                }
            </select>
        </div>

        <!-- NOTES -->
        <div class="mt-3 d-flex flex-column">
            <label for="Notes">Notes</label>
            <textarea id="Notes" name="Notes" class="form-control" rows="3"></textarea>
        </div>

        <!-- SUBMIT -->
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Create Appointment</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </div>
    </form>
</div>
