@model IEnumerable<appointment_backend.Models.Doctor>

@{
    ViewData["Title"] = "Lista de Doctores";
}

<h2 class="mb-4">Lista de Doctores</h2>
<p>
    
    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modal">Agregar nuevo doctor</button>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Nombre</th>
        <th>Documento</th>
        <th>Tipo de Documento</th>
        <th>Especialidad</th>
        <th>Teléfono</th>
        <th>Correo Electrónico</th>
        <th>Acciones</th>
    </tr>
    </thead>
    <tbody>
    @if (Model != null && Model.Any())
    {
        foreach (var doctor in Model)
        {
            <tr>
                <td>@doctor.Name</td>
                <td>@doctor.Document</td>
                <td>@doctor.DocumentType.Type</td>
                <td>@doctor.Speciality.Name</td>
                <td>@doctor.Phone</td>
                <td>@doctor.Email</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@doctor.Id" class="btn btn-warning btn-sm">Editar</a>
                    <a asp-action="Delete" asp-route-id="@doctor.Id" class="btn btn-danger btn-sm">Eliminar</a>
                </td>
            </tr>
        }
    }
    else
    {
        <tr><td colspan="6" class="text-center">No hay doctores registrados.</td></tr>
    }
    </tbody>
</table>

<!-- Modal para agregar Médico -->
<div class="modal fade" id="modal" tabindex="-1" aria-labelledby="modalMedicoLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Encabezado -->
            <div class="modal-header">
                <h5 class="modal-title" id="modalMedicoLabel">Agregar Médico</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
            </div>

            <!-- Formulario -->
            <form asp-action="Create" method="post">
                <div class="modal-body px-4 py-3">

                    <div class="mb-3">
                        <label for="Name" class="form-label fw-semibold">Nombre Completo</label>
                        <input type="text" name="Name" id="Name" class="form-control" placeholder="Ej: Juan Pérez" required>
                    </div>

                        <div class="mb-3">
                            <label for="DocumentTypeId" class="form-label fw-semibold">Tipo de Documento (ID)</label>
                           
                            <select name="DocumentTypeId" class="form-select" required>
                                <option selected disabled>Seleccione un tipo de documento</option>
                                @if (ViewBag.DocumentTypes != null)
                                {
                                    foreach (var tipo in ViewBag.DocumentTypes)
                                    {
                                        <option value="@tipo.Id">@tipo.Type</option>
                                    }
                                }
                            </select>
                    
                        </div>
                    <div class="mb-3">
                        <label for="Document" class="form-label fw-semibold">Documento</label>
                        <input type="text" name="Document" id="Document" class="form-control" placeholder="Número de documento" required>
                    </div>


                    <div class="mb-3">
                        <label for="Phone" class="form-label fw-semibold">Teléfono</label>
                        <input type="text" name="Phone" id="Phone" class="form-control" placeholder="Ej: 3001234567">
                    </div>

                    <div class="mb-3">
                        <label for="SpecialityId" class="form-label fw-semibold">Especialidad (ID)</label>
                        <select name="SpecialityId" id="SpecialityId" class="form-select" required>
                            <option value="">Seleccione una especialidad</option>
                            @foreach (var esp in ViewBag.Specialities)
                            {
                                <option value="@esp.Id">@esp.Name</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="Email" class="form-label fw-semibold">Correo Electrónico</label>
                        <input type="email" name="Email" id="Email" class="form-control" placeholder="correo@ejemplo.com" required>
                    </div>

                </div>

                <!-- Pie del modal -->
                <div class="modal-footer border-0 px-4 pb-3">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save me-1"></i>Guardar
                    </button>
                    <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">
                        <i class="bi bi-x-circle me-1"></i>Cancelar
                    </button>
                </div>
            </form>

        </div>
    </div>
</div>

