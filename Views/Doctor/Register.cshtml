@model appointment_backend.Models.Doctor

@{
    ViewData["Title"] = "Registrar Doctor";
}

<div class="container mt-4">
    <div class="card shadow p-4">
        <h3 class="text-primary fw-bold mb-3">Registrar Doctor</h3>

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
        }

        <form asp-action="Register" asp-controller="Doctor" method="post">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="row mb-3">
                <div class="col-md-6">
                    <label class="form-label fw-semibold">Nombre</label>
                    <input asp-for="Name" class="form-control" placeholder="Ingresa el nombre completo" />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">Teléfono</label>
                    <input asp-for="Phone" class="form-control" placeholder="10 dígitos" />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">Documento</label>
                    <input asp-for="Document" class="form-control" placeholder="Número de documento" />
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">Tipo de documento</label>
                    <select asp-for="DocumentTypeId"
                            class="form-select"
                            asp-items="@(ViewData["DocumentTypeId"] as SelectList)">
                        <option value="">Seleccione...</option>
                    </select>
                </div>

                <div class="col-md-3">
                    <label class="form-label fw-semibold">Especialidad</label>
                    <select asp-for="SpecialityId"
                            class="form-select"
                            asp-items="@(ViewData["SpecialityId"] as SelectList)">
                        <option value="">Seleccione...</option>
                    </select>
                </div>
                
                <div class="col-md-3">
                    <label class="form-label fw-semibold">Correo</label>
                    <input type="email" asp-for="Email" class="form-control" placeholder="Número de documento" />
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-save"></i> Guardar
                </button>
                <a asp-action="Index" class="btn btn-secondary ms-2">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
