@model appointment_backend.Models.Patient

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h3 class="mb-0"><i class="bi bi-person-plus"></i> Registrar Nuevo Paciente</h3>
                </div>
                <div class="card-body">
                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    <form asp-action="Register" method="post">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Nombre Completo</label>
                            <input asp-for="Name" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Documento</label>
                            <input asp-for="Document" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Tel√©fono</label>
                            <input asp-for="Phone" class="form-control form-control-lg" required />
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Email</label>
                            <input asp-for="Email" class="form-control form-control-lg" required />
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label fw-bold">Edad</label>
                            <input asp-for="Age" type="number" class="form-control form-control-lg" required />
                        </div>

                        <div class="d-flex justify-content-end gap-2 mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="bi bi-arrow-left"></i> Volver
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-check-circle"></i> Guardar
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>